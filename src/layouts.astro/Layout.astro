---
// Import global styles and the Navbar component
import "../styles/global.css";
import Navbar from '../components/Navbar.astro';
---

<html lang="en">
  <head>
    <title>Your Astro Page</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet"/>
    <style>
      body {
        font-family: 'Roboto', sans-serif;
      }
      .gradient-bg {
        background: linear-gradient(90deg, rgba(255,0,150,1) 0%, rgba(255,154,0,1) 100%);
      }
      .background-gradient {
  background: linear-gradient(
    135deg,
    #ff4a5b, /* Pinkish red */
    #ff8e00, /* Orange */
    #ffd500, /* Yellow */
    #0094ff, /* Light blue */
    #8357ff  /* Purple */
  );
  background-size: 200% 200%;
  animation: gradient-animation 15s ease infinite;
  width: 100%;
  height: 100vh;
}

@keyframes gradient-animation {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}
    </style>
  </head>
  <body class="gradient-bg text-white">
    <!-- Navbar Component -->
    <Navbar />

    <!-- Main Content Slot -->
    <main>
      <slot />
    </main>

    <!-- JavaScript for menu toggle if needed -->
    <script>
      function toggleMenu() {
        var menu = document.getElementById('mobile-menu');
        if (menu) { // Check if the menu exists
          menu.classList.toggle('hidden');
        }
      }
    </script>
  </body>
</html>
