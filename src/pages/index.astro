---
// Import global styles and the ScrollSection component
import "../styles/global.css";
import ScrollSection from "../components/ScrollSection.astro";
import Layout from "../layouts.astro/Layout.astro";
---

<!-- Use Layout as the page wrapper -->
<Layout>
<div class="bg-red-500 text-white p-4">Test Tailwind CSS</div>

  <!-- Hero Section -->
  <section class="container mx-auto p-8 text-center">
    <div class="text-left p-10 md:w-3/4 lg:w-2/3">
      <span class="inline-block bg-red-600 text-white px-3 py-1 rounded-full mb-4 text-sm">Invite only</span>
      <h1 class="text-6xl font-extrabold text-white leading-tight mb-6">
        Financial infrastructure to grow your revenue
      </h1>
      <p class="text-lg text-white mb-6">
        Join the millions of companies of all sizes that use our service to accept payments online and in person, embed financial services, power custom revenue models, and build a more profitable business.
      </p>
      <button class="bg-white text-black px-6 py-3 rounded-full font-bold">Request an invite</button>
    </div>
  </section>

  <!-- Payment Section -->
  <section class="flex flex-col md:flex-row justify-center items-center gap-8 mt-12">
    <div class="bg-white rounded-xl shadow-lg p-6 w-full md:w-1/3">
      <h2 class="text-xl font-bold mb-4">Abstraction Magazine</h2>
      <p class="text-gray-700 mb-4">₹19 per month</p>
      <button class="bg-black text-white w-full py-2 rounded mb-4">Apple Pay</button>
      <div class="text-center text-gray-500">Or pay with card</div>
      <input type="email" placeholder="Email" class="w-full border p-2 rounded mb-2">
      <input type="text" placeholder="Card Information" class="w-full border p-2 rounded mb-2">
      <input type="text" placeholder="Country or region" class="w-full border p-2 rounded mb-4">
      <button class="bg-blue-600 text-white w-full py-2 rounded">Pay</button>
    </div>

    <!-- Statistics Section -->
    <div class="bg-white rounded-xl shadow-lg p-6 w-full md:w-1/3">
      <div class="text-left mb-4">
        <p class="text-gray-500">Today</p>
        <h3 class="text-3xl font-bold">₹35,28,198.72</h3>
        <p class="text-sm text-gray-500">14:00</p>
      </div>
      <div class="border-t pt-4 mt-4">
        <p class="text-gray-700">Net volume from sales</p>
        <p class="text-green-500 font-bold">+32.8%</p>
        <div class="mt-4">
          <!-- Placeholder for graph or stats -->
          <p class="text-gray-500">Updated today 07:50</p>
        </div>
      </div>
    </div>
  </section>

  
  <!-- Partner Logos Section -->
  <section class="bg-white py-20">
    <div class="max-w-7xl mx-auto grid grid-cols-2 md:grid-cols-4 gap-y-12 gap-x-12">
      <img src="public/logos/amazon.png" alt="Amazon" class="mx-auto h-16">
      <img src="/SentinalGaurdAI-task//logos/Salesforce.png" alt="Salesforce" class="mx-auto h-16">
      <img src="/SentinalGaurdAI-task//logos/google.png" alt="Google" class="mx-auto h-16">
      <img src="/SentinalGaurdAI-task//logos/Zara.png" alt="Zara" class="mx-auto h-16">
      <img src="/SentinalGaurdAI-task//logos/shopify.png" alt="Shopify" class="mx-auto h-16">
      <img src="/SentinalGaurdAI-task//logos/WhatsApp.png" alt="WhatsApp" class="mx-auto h-16">
      <img src="/SentinalGaurdAI-task//logos/BMW.png" alt="BMW" class="mx-auto h-16">
      <img src="/SentinalGaurdAI-task//logos/Marriot.png" alt="Marriott" class="mx-auto h-16">
    </div>
  </section>

  <!-- Scroll Section Component -->
  <ScrollSection />
</Layout>
